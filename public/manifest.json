{
  "manifest_version": 3,
  "name": "Tabregator",
  "description": "Manage all your browser tabs across windows from a single dashboard",
  "version": "1.0.0",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_title": "Tabregator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open Tabregator dashboard"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
